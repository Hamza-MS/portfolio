---
import Navbar from "components/Navbar.astro";
import HomeSection from "sections/HomeSection.astro";
import ProjectsSection from "sections/ProjectsSection";
import AboutSection from "sections/AboutSection.astro";
import ContactSection from "sections/ContactSection";
import Footer from "components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/Avatar.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <!-- Primary Meta Tags -->
    <title>Filip Ivanovic</title>
    <meta name="title" content="Filip Ivanovic" />
    <meta
      name="description"
      content="Filip Ivanovic - Frontend Developer - React, JavaScript, NextJS, TypeScript"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://filipivanovic.netlify.app/" />
    <meta property="og:title" content="Filip Ivanovic" />
    <meta
      property="og:description"
      content="Filip Ivanovic - Frontend Developer - React, JavaScript, NextJS, TypeScript"
    />
    <meta property="og:image" content="/thumbnail.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://filipivanovic.netlify.app/" />
    <meta property="twitter:title" content="Filip Ivanovic" />
    <meta
      property="twitter:description"
      content="Filip Ivanovic - Frontend Developer - React, JavaScript, NextJS, TypeScript"
    />
    <meta property="twitter:image" content="/thumbnail.png" />

    <link rel="preconnect" href="https://fonts.gstatic.com/" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap"
      rel="stylesheet"
    />
    <title>Filip Ivanovic</title>
  </head>
  <body>
    <Navbar />
    <div
      class="2xl:max-w-7xl xl:max-w-6xl lg:max-w-4xl md:max-w-2xl sm:max-w-xl mx-auto"
    >
      <HomeSection />

      <ProjectsSection client:visible />

      <AboutSection />

      <ContactSection client:load />

      <Footer />
    </div>
  </body>
</html>

<style is:global>
  * {
    @apply text-white;
    font-family: "Poppins", sans-serif;
    font-style: normal;
    font-display: optional;
    color-scheme: dark;
  }
  html {
    -webkit-tap-highlight-color: transparent;
    scroll-behavior: smooth;
    @apply scroll-pt-32;
  }
  body {
    @apply bg-dark transition duration-500;
  }
  ::selection {
    background-color: gray;
    border-radius: 10px;
    color: white;
  }
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: #383838;
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #999999;
  }
</style>
