---
import Arrow from "components/Arrow.astro";
import Layout from "layouts/Layout.astro";
---

<Layout title="Filip Ivanovic">
  <div class="mt-52 w-full flex items-center justify-center flex-col">
    <h1 class="text text-6xl text-center font-bold">
      <span class="word">Get to know</span>
      <span class="word">Filip</span>
      <span class="word">your next</span>
      <br />
      <span
        class="word text-transparent font-bold bg-clip-text bg-gradient-to-r from-secondary via-primary to-violet-500 bg-cover"
        >Front-end Developer</span
      >
    </h1>
    <Arrow />
  </div>
</Layout>

<script>
  import { gsap } from "gsap";
  gsap.fromTo(
    ".word",
    {
      duration: 1,
      y: 100,
      opacity: 0,
      ease: "power1.inOut",
      stagger: {
        amount: 1,
      },
    },
    {
      duration: 1,
      y: 0,
      opacity: 1,
      ease: "power1.inOut",
      stagger: {
        amount: 1,
      },
    }
  );
</script>
