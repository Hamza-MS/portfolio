---
import { SEO } from "astro-seo";
import BaseHead from "components/BaseHead.astro";
import BaseLayout from "layouts/BaseLayout.astro";
import AboutSection from "sections/AboutSection.astro";
import ContactSection from "sections/ContactSection";
import HomeSection from "sections/HomeSection.astro";
import ProjectsSection from "sections/ProjectsSection.astro";
---

<html lang="en">
  <head>
    <BaseHead title="Hamza El Mesaouab" />

    <SEO
      title="Hamza El Mesaouab"
      description="Hamza El Mesaouab - Frontend Developer - React, JavaScript, NextJS, TypeScript"
      openGraph={{
        basic: {
          title: "Hamza El Mesaouab",
          type: "website",
          image: "/thumbnail.png",
          url: "https://filipivanovic.netlify.app/",
        },
      }}
      twitter={{
        title: "Hamza El Mesaouab Portfolio",
        description:
          "Hamza El Mesaouab - Frontend Developer - React, JavaScript, NextJS, TypeScript",
        card: "summary_large_image",
        creator: "@alkanoidev",
        site: "https://filipivanovic.netlify.app/",
        image: "/thumbnail.png",
      }}
    />
  </head>
  <body>
    <BaseLayout>
      <HomeSection />

      <ProjectsSection />

      <AboutSection />

      <ContactSection client:load />
    </BaseLayout>

    <script>
      import { loglib } from "@loglib/tracker";

      loglib.record({
        id: "filipivanovic",
        host: "https://www.loglib.io",
      });
    </script>
  </body>
</html>
