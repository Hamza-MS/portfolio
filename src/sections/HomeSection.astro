---
import Arrow from "components/Arrow.astro";
---

<div
  class="w-full h-[calc(100vh-100px)] flex items-center justify-center flex-col"
>
  <h1 class="text sm:text-6xl text-3xl text-center font-bold">
    <span class="word">Get to know</span>
    <span class="word">Filip,</span>
    <br class="sm:hidden block" />
    <span class="word">your next</span>
    <br />
    <span class="gradient-head word text-transparent font-bold bg-cover">
      Front-end Developer
    </span>
  </h1>
  <Arrow />
</div>

<style>
  .gradient-head {
    @apply text-transparent font-bold
         bg-gradient-to-r from-primary via-sky-600 to-primary 
         bg-clip-text bg-[length:200%_auto];
    animation: shine 2s linear infinite;
    animation-delay: 0.5s;
  }
  @keyframes shine {
    to {
      background-position: 200% center;
    }
  }
</style>

<script>
  import { gsap } from "gsap";

  const timeline = gsap.timeline({ delay: 0.5 });
  timeline.fromTo(
    ".word",
    {
      duration: 0.3,
      opacity: 0,
      ease: "power1.inOut",
      stagger: {
        amount: 1,
      },
    },
    {
      duration: 0.3,
      y: 0,
      opacity: 1,
      ease: "power1.inOut",
      stagger: {
        amount: 1,
      },
    }
  );
</script>
