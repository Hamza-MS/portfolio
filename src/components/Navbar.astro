---
import PrimaryButton from "components/buttons/PrimaryButton.astro";
import SecondaryButton from "components/buttons/SecondaryButton";
import MobileNav from "components/MobileNav";
---

<nav
  class="sticky z-0 top-5 flex justify-between items-center mx-auto gap-5 2xl:max-w-7xl xl:max-w-6xl lg:max-w-4xl md:max-w-2xl sm:max-w-xl"
>
  <a href="/" class="hover:ring-8 hover:ring-off-dark rounded-full transition">
    <img src="avatar.png" alt="me" class="w-28" />
  </a>
  <div class="line bg-gradient-to-r h-[1px] from-black to-white w-full"></div>
  <ul class=" sm:flex hidden gap-2 items-center">
    <li><SecondaryButton>Projects</SecondaryButton></li>
    <li><SecondaryButton>About</SecondaryButton></li>
    <li><SecondaryButton>Blog</SecondaryButton></li>
    <li><PrimaryButton>Contact</PrimaryButton></li>
  </ul>
  <MobileNav client:visible />
</nav>

<style>
  ul li a {
    @apply py-3 px-6 transition rounded-lg;
  }
  ul li a:hover {
    @apply bg-off-dark;
  }
</style>
